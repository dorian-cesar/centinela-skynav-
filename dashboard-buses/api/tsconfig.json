{
  "compilerOptions": {
    /* ==========================
     *  Salida / Paths
     * ========================== */
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"]
    },

    /* ==========================
     *  MÃ³dulos: CommonJS
     * ========================== */
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    /* ==========================
     *  Calidad / Strict Mode
     * ========================== */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ==========================
     *  Importaciones
     * ========================== */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* ==========================
     *  Otros
     * ========================== */
    "allowJs": false,
    "noEmitOnError": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
